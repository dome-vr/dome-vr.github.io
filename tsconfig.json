{
  "compilerOptions": {
    "target": "es6",
    "rootDir": "src/app",
    "module": "system",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false
  },
  "include": ["**/*"],
  "exclude": ["node_modules", "dist", "doc", "e2e", "logs", "NOTES", 
    "src-app-es6", "src/assets", "src/libs", "src/styles", "src/systemjs",
    "src/utils"] 
}
